<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacilityListUserFragment">

    <LinearLayout
        android:id="@+id/favouriteList_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/favouriteList_btnSort"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_sort"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="@string/sort_label"
            android:textColor="#757575"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/favouriteList_btnFilter"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_filter"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="@string/filter_label"
            android:textColor="#757575"
            app:backgroundTint="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/favouriteList_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/favouriteList_btnPendingApprovals"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="#0693EF"
            android:text="@string/facility_category_label"
            android:textAllCaps="false"
            android:textColor="#212121"
            app:backgroundTint="#0693EF" />

        <Button
            android:id="@+id/favouriteList_btnFeedback"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_profile"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/my_profile_label"
            android:textAllCaps="false"
            android:textColor="#757575"
            app:backgroundTint="#FFFFFF" />
    </LinearLayout>

    <ListView
        android:id="@+id/favouriteList_listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        app:layout_constraintBottom_toTopOf="@+id/favouriteList_linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favouriteList_linearLayout1"
        tools:listitem="@layout/facility_layout" />


</androidx.constraintlayout.widget.ConstraintLayout>