<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facilityListAdmin_frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPendingApprovalsFragment">

    <LinearLayout
        android:id="@+id/adminPendingApprovals_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/adminPendingApprovals_spinnerSort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:entries="@array/spinner_sort_admin" />

        <Button
            android:id="@+id/adminPendingApprovals_btnFilter"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ic_filter"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="@string/filter_label"
            android:textColor="#757575"
            app:backgroundTint="#FFFFFF" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adminPendingApprovals_recycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminPendingApprovals_linearLayout"
        tools:listitem="@layout/facility_layout" />
</androidx.constraintlayout.widget.ConstraintLayout>